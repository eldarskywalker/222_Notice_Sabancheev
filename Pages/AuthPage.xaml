<Page x:Class="_222_Notice_Sabancheev.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Notice_Sabancheev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Button Content="Войти" HorizontalAlignment="Center" Margin="0,369,0,0" VerticalAlignment="Top" Height="27" Width="172" Click="Button_Click"/>
        <Button Content="Регистрация" HorizontalAlignment="Left" Margin="671,31,0,0" VerticalAlignment="Top" Height="22" Width="99" Click="Button_Click_1"/>
        <Label Content="Логин" 
            x:Name="labelLogin" 
            Margin="178,104,0,320" 
            HorizontalAlignment="Left" 
            Width="54" 
             />
        <Label Content="Пароль" 
            x:Name="labelPass" 
            Margin="173,188,0,232" 
            HorizontalAlignment="Left" 
            Width="64" 
        />
        <TextBox x:Name="TextBoxLogin" 
            Background="Transparent" 
            Margin="0,108,0,0" 
            TextWrapping="Wrap" 
            ToolTip="Введите логин или почту" 
            Height="34" 
            VerticalAlignment="Top" 
            HorizontalAlignment="Center" 
            Width="134" 
        />
        <PasswordBox x:Name="PasswordBox" 
            Background="Transparent" 
            ToolTip="Введите пароль" 
            Margin="0,185,0,0" 
            HorizontalAlignment="Center" 
            Width="134" 
            Height="32" 
            VerticalAlignment="Top" />

    </Grid>
</Page>
