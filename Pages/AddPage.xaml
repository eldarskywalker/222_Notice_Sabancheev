<Page x:Class="_222_Notice_Sabancheev.Pages.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Notice_Sabancheev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPage">

    <Grid>
        <Button Content="Сохранить" HorizontalAlignment="Center" Margin="0,410,0,0" VerticalAlignment="Top" Click="Button_Click" Width="278"/>
        <Label Content="Название" HorizontalAlignment="Left" Margin="100,58,0,0" VerticalAlignment="Top"/>
        <Label Content="Категория" HorizontalAlignment="Left" Margin="97,122,0,0" VerticalAlignment="Top"/>
        <Label Content="Цена" HorizontalAlignment="Left" Margin="114,178,0,0" VerticalAlignment="Top"/>
        <Label Content="Город" HorizontalAlignment="Left" Margin="114,236,0,0" VerticalAlignment="Top"/>
        <Label Content="Описание" HorizontalAlignment="Left" Margin="101,301,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="378,59,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="251" Height="24" Text="{Binding Name}"/>
        <TextBox HorizontalAlignment="Left" Margin="378,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="251" Height="24" Text="{Binding Coast}"/>
        <TextBox HorizontalAlignment="Left" Margin="378,314,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="251" Height="22" Text="{Binding Description}"/>
        <ComboBox x:Name="CategoryCombo" HorizontalAlignment="Left" Margin="378,119,0,0" VerticalAlignment="Top" Width="251" Height="24"  SelectedValuePath="ID" SelectedValue="{Binding Path=CategoryID}"/>
        <ComboBox x:Name="CityCombo" HorizontalAlignment="Left" Margin="378,249,0,0" VerticalAlignment="Top" Width="251"  SelectedValuePath="ID" SelectedValue="{Binding Path=CityID}"/>
        <ComboBox x:Name="TypeCombo" HorizontalAlignment="Left" Margin="378,372,0,0" VerticalAlignment="Top" Width="251"  SelectedValuePath="ID" SelectedValue="{Binding Path=TypeID}"/>
        <Label Content="Тип" HorizontalAlignment="Left" Margin="122,372,0,0" VerticalAlignment="Top"/>


    </Grid>
</Page>
