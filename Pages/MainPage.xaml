<Page x:Class="_222_Notice_Sabancheev.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_222_Notice_Sabancheev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1000"
      Title="MainPage" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="73*"/>
        <RowDefinition Height="377*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Добавить" HorizontalAlignment="Left" Height="33" Margin="5,0,0,0" VerticalAlignment="Top" Width="130" x:Name="AddBtn" Visibility="Hidden" Click="AddBtn_Click" Background="#FFFF9C1A"/>
            <Button Content="Удалить" HorizontalAlignment="Left" Height="33" Margin="5,0,0,0" VerticalAlignment="Top" Width="130" x:Name="DelBtn" Visibility="Hidden" Click="DelBtn_Click" Background="#FFFF9C1A"/>
            <Button Content="Редактировать" HorizontalAlignment="Left" Height="32" Margin="5,0,0,0" VerticalAlignment="Top" Width="130" x:Name="RedBtn" Visibility="Hidden" Background="#FFFF9C1A"/>
            <Button Content="Завершить" HorizontalAlignment="Left" Height="32" Margin="5,0,0,0" VerticalAlignment="Top" Width="130" x:Name="EndBtn" Visibility="Hidden" Click="EndBtn_Click" Background="#FFFF9C1A"/>
            <Button Content="Завершенные" HorizontalAlignment="Left" Height="32" Margin="5,0,0,0" VerticalAlignment="Top" Width="130" x:Name="EndуdBtn" Visibility="Hidden" Click="EndуdBtn_Click" Background="#FFFF9C1A"/>
            <Button Content="Сброс" HorizontalAlignment="Left" Height="32" Margin="5,0,0,0" VerticalAlignment="Top" Width="130" x:Name="ReBtn" Visibility="Hidden" Click="ReBtn_Click" Background="#FFFF9C1A"/>
            <Button Content="Войти" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top" Height="24" Width="89" Click="Button_Click" Background="#FFFF9C1A"/>
            <Label x:Name="LabelSum"/>
        </StackPanel>
        
        <DataGrid Grid.Row="1" x:Name="DataGridNotice"  
AutoGenerateColumns="False" IsReadOnly="True" Background="#FFFF">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date}"  Width="50"/>
                <DataGridTextColumn Header="Город" Binding="{Binding City.CityName}" Width="80" />
                <DataGridTextColumn Header="Пользователь" Binding="{Binding User.Login}" Width="80" />
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="50"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding Type.TypeName}" Width="70"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding Coast}"  Width="80"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category.CategoryName}" Width="80" />
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="80" />
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}"  Width="50"/>
            </DataGrid.Columns>
        </DataGrid> 
    </Grid>
</Page>
